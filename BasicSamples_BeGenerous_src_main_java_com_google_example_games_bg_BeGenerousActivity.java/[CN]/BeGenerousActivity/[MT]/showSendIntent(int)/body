{
  if (getGameHelper().isSignedIn()) {
    GoogleApiClient client=getApiClient();
    if (!client.isConnected()) {
      Log.i(TAG,"Failed to show send intent, Google API client isn't connected!");
      return;
    }
    String description="";
    int intentCode;
    Bitmap icon;
switch (type) {
case GameRequest.TYPE_GIFT:
      description=getString(R.string.send_gift_description);
    intentCode=SEND_GIFT_CODE;
  icon=mGiftIcon;
break;
case GameRequest.TYPE_WISH:
description=getString(R.string.send_request_description);
intentCode=SEND_REQUEST_CODE;
icon=mGiftIcon;
break;
default :
return;
}
Intent intent=Games.Requests.getSendIntent(client,type,"".getBytes(),DEFAULT_LIFETIME,icon,description);
startActivityForResult(intent,intentCode);
}
}
