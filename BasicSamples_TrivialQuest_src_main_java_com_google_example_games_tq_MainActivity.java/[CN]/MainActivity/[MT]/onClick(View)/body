{
switch (view.getId()) {
case R.id.button_sign_in:
    if (!verifyPlaceholderIdsReplaced()) {
      showAlert("Error","Sample not correctly set up. See README!");
      break;
    }
  beginUserInitiatedSignIn();
break;
case R.id.button_sign_out:
signOut();
showSignInBar();
break;
case R.id.button_win:
showAlert(getString(R.string.victory),getString(R.string.you_won));
if (getGamesClient().isConnected()) {
getGamesClient().unlockAchievement(getString(R.string.trivial_victory_achievement_id));
}
break;
}
}
