{
  if (match.getData() != null) {
    updateMatch(match);
    return;
  }
  mMatch=match;
  mTurnData=new DrawingTurn();
  String myParticipantId=getCurrentParticipant().getParticipantId();
  mTurnData.artistTurn=createNewTurnSegment(myParticipantId);
  showSpinner();
  getGamesClient().takeTurn(this,match.getMatchId(),mTurnData.persist(),myParticipantId);
  DrawingTurn check=DrawingTurn.unpersist(mTurnData.persist());
  assert(check.guessingTurn.strokes.size() == mTurnData.guessingTurn.strokes.size());
  assert(check.guessingTurn.strokes.size() == mTurnData.guessingTurn.strokes.size());
  mTurnData=null;
  mCurrentStroke=null;
}
